.visible-xs
  - @order_items.each do |item|
    .general-cart-item.divider-lg-bottom
      = link_to item, method: :delete, class: 'close general-cart-close' do
        %span{'aria-hidden': "true"} &times;
      .general-img-wrap-table
        %img.cart-img-shadow{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
      %p.title= item.book.title
      %table.table
        %tr
          %td
            %span.in-grey-600 Price
          %td
            %span.font-16.in-gold-500= price_to_euro(item.book.price)
        %tr
          %td.vertical-middle
            %span.in-grey-600 Quantity
          %td
            .input-group
              = link_to order_item_path(id: item.id, order_item: {quantity: item.quantity - 1}), class: 'input-link', id: "order_#{item.id}_minus", method: :put, remote: true do
                %i.fa.fa-minus.line-heaght-40
              %input.form-control.quantity-input{type: "text", value: item.quantity}
              = link_to order_item_path(id: item.id, order_item: {quantity: item.quantity + 1}), class: 'input-link', id: "order_#{item.id}_plus", method: :put, remote: true do
                %i.fa.fa-plus.line-heaght-40
        %tr
          %td
            %span.in-grey-600 SubTotal
          %td
            %span.font-16.in-gold-500= price_to_euro(item.total_price)