%main.container.general-main-wrap
  %h1.general-title-margin Cart
  = render 'carts/mobile_order_items'
  = render 'carts/order_items'
  .general-order-wrap
    .row
      .col-sm-4
        = form_with url: cart_path, method: :put do |f|
          .input-group.general-input-group
            %label.input-label Enter Your Coupon Code
            = f.text_field :coupon_code, placeholder: "Enter Your Coupon Code ", class: 'form-control mb-30'
          %div
            = f.submit "Apply Coupon", class: "btn btn-primary mb-15 res-block"
      .col-sm-8
        .res-mr-200.text-center.general-text-right
          %p.in-gold-500.font-18 Order Summary
          %table.general-summary-table.general-summary-table-right.general-text-right
            %tr
              %td
                %p.font-16 Subtotal:
              %td
                %p.font-16= price_to_euro(@cart.subtotal)
            %tr
              %td
                %p.font-16 Coupon:
              %td
                %p.font-16= price_to_euro(@cart.discount)
            %tr
              %td
                %strong.font-18 Order Total:
              %td
                %strong.font-18= price_to_euro(@cart.order_total)
          %button.btn.btn-default.mb-20.visible-xs-inline-block Checkout
  %button.btn.btn-default.mb-20.hidden-xs.center-block Checkout
