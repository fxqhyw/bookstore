%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand= t('header.logo')
      = link_to cart_path, class: 'shop-link pull-right visible-xs' do
        %span.shop-icon
          %span.shop-quantity=  current_cart.items_count
    = link_to cart_path, class: 'shop-link pull-right hidden-xs' do
      %span.shop-icon
        %span.shop-quantity=  current_cart.items_count
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      = render 'layouts/mobile_header'
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            = link_to t('button.home'), root_path
          %li.dropdown
            %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}= t('header.shop')
            %ul.dropdown-menu
              - categories.each do |category|
                %li
                  = link_to category.title, catalog_path(category: category.id), class: 'collapse-link'
              %li.divider{role: "separator"}
          - if user_signed_in?
            %li.dropdown
              = link_to t('.header.account'), {}, class: "dropdown-toggle", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"
              %ul.dropdown-menu
                %li 
                  = link_to t('header.orders'), root_path #to do
                %li
                  = link_to t('header.settings'), addresses_path
                %li.divider{role: "separator"}
                %li
                  = link_to t('header.logout'), destroy_user_session_path, method: :delete
          - else
            %li
              = link_to t('header.login'), new_user_session_path
            %li
              = link_to t('hedaer.signup'), new_user_registration_path