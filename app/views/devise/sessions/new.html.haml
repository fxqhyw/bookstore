%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Log In
    = render 'devise/shared/omniouth'
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "general-form" }) do |f|
    = devise_error_messages!
    .form-group.mb-30
      = f.label :email, class: "control-label input-label"
      = f.email_field :email, id: "email", class: "form-control", autofocus: true, placeholder: "Enter Email"
    .form-group.mb-30
      = f.label :password, class: "control-label input-label"
      = f.password_field :password, autocomplete: "off", id: "password", class: "form-control", placeholder: "Password"
      = link_to 'Forgot password?', new_password_path(resource_name), class: "help-block in-gold-500"
    .form-group.checkbox.text-center.mb-30
      %label.checkbox-label
        = f.check_box :remember_me, hidden: "true", class: "checkbox-input"
        %span.checkbox-icon
          %i.fa.fa-check
        %span.checkbox-text Remember me
    .text-center
      = f.submit 'Back to Store', class: "btn btn-default mb-20"
  %p.general-sign-text.text-center
    Donâ€™t have an Account?
    = link_to 'Sign up', new_user_registration_path, class: "in-gold-500"
