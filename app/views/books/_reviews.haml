%ul.media-list
  - @reviews.each do |review|
    %li.media.card
      .media-left
        %span.img-circle.logo-size.logo-empty.media-object= review.avatar_letter
      .media-body
        %div
          %p.general-message-date.hidden-xs= review.create_date
          .max-240
            .general-message-name= reviewer_name(review.user)
        .mb-15
          - review.rating.times do
            %i.fa.fa-star.rate-star
          - (5 - review.rating).times do
            %i.fa.fa-star.rate-star.rate-empty
        %strong.mb-10= review.title
        %p= review.description
    