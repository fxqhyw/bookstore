.col-xs-6.col-sm-3
  .general-thumb-wrap
    .thumbnail.general-thumbnail
      %img.img-shadow.general-thumbnail-img{src: "https://encrypted-tbn3.gstatic.com/images?q=tbn:ANd9GcQ352GRUKdIFLP3va0Tj7QREidI4lwUABrtUJbQehqIL02O_blo", alt: "design-book"}
      .thumb-hover
        .general-thumb-link-wrap
          = link_to book_path(book), class: 'thumb-hover-link' do
            %i.fa.fa-eye.thumb-icon{'aria-hidden': 'true'}
          = link_to order_items_path(order_item: { book_id: book.id, cart_id: current_cart.id, quantity: 1 }), method: :post, class: 'thumb-hover-link', remote: true do
            %i.fa.fa-shopping-cart.thumb-icon
  .general-thumb-info
    .space-between
      %p.title= book.title
      %p.font-16.in-gold-500= price_to_euro(book.price)
    %span.divider-sm
    %p.lead.small= authors_list(book)
