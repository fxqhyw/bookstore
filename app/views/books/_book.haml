.col-xs-6.col-sm-3
  .general-thumb-wrap
    .thumbnail.general-thumbnail
      %img.img-shadow.general-thumbnail-img{src: "https://encrypted-tbn3.gstatic.com/images?q=tbn:ANd9GcQ352GRUKdIFLP3va0Tj7QREidI4lwUABrtUJbQehqIL02O_blo", alt: "design-book"}
      .thumb-hover
        .general-thumb-link-wrap
          = link_to book, class: 'thumb-hover-link' do
            %i.fa.fa-eye.thumb-icon{'aria-hidden': 'true'}
          %a.thumb-hover-link{href: "#"}
            %i.fa.fa-shopping-cart.thumb-icon
  .general-thumb-info
    .space-between
      %p.title= book.title
      %p.font-16.in-gold-500= price_to_euro(book.price)
    %span.divider-sm
    %p.lead.small= authors_list(book)
