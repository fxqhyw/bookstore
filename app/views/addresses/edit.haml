    %li.tab-item{role: "presentation"}
      = link_to t('settings.address'), addresses_path, class: 'tab-link filter-link active'
    %li.tab-item{role: "presentation"}
      = link_to t('settings.privacy'), privacy_path, class: 'tab-link'
  .tab-content
    = render 'address_tab'