%main.container.general-main-wrap
  %h1.general-title-margin Checkout
  %ul.steps.list-inline
    %li.step.done
      %span.step-number
        %i.fa.fa-check.step-icon
      %span.step-text.hidden-xs Address
    %li.step.done
      %span.step-number
        %i.fa.fa-check.step-icon
      %span.step-text.hidden-xs Delivery
    %li.step.done
      %span.step-number
        %i.fa.fa-check.step-icon
      %span.step-text.hidden-xs Payment
    %li.step.done
      %span.step-number
        %i.fa.fa-check.step-icon
      %span.step-text.hidden-xs Confirm
    %li.step.active
      %span.step-number 5
      %span.step-text.hidden-xs Complete
  .text-center.mb-40
    %h3.general-subtitle Thank You for your Order!
    %p.fw-300= "An order confirmation has been has been sent to #{@placed_order.user.email}"
  .row.mb-20
    .col-sm-6
      .visible-xs
        %p.general-order-number.mb-0= 'Order ' + @placed_order.number
        %p.general-address.mb-30= order_date(@placed_order)
      - if @placed_order.shipping_address
        = render partial: 'shipping_address_info', locals: { order: @placed_order }
      - else
        = render partial: 'billing_address_info', locals: { order: @placed_order }
    .col-sm-6.hidden-xs.text-right
      %p.general-order-number.mb-0= 'Order ' + @placed_order.number
      %p.general-address.mb-30= order_date(@placed_order)
  .visible-xs
    .general-cart-item.divider-lg
      - @placed_order.order_items.each do |item|
        .general-img-wrap-table
          %img.cart-img-shadow{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
        = link_to book_path(item.book), class: 'text-as-link' do
          %p.title= item.book.title
        %P.in-grey-600.fw-300= truncate(item.book.description, length: 75)
        %table.table
          %tr
            %td
              %span.in-grey-600 Price
            %td
              %span.font-16.in-gold-500= price_to_euro(item.book.price)
          %tr
            %td.vertical-middle
              %span.in-grey-600 Quantity
            %td
              %span= item.quantity
          %tr
            %td
              %span.in-grey-600 SubTotal
            %td
              %span.font-16.in-gold-500= price_to_euro(item.total_price)
  .hidden-xs.divider-lg.pt-20
    %table.table.table-hover
      %thead
        %tr
          %th
            %span.in-grey-600 Book
          %th.col-method
          %th
            %span.in-grey-600 Price
          %th
            %span.in-grey-600 Quantity
          %th
            %span.in-grey-600 Total
      %tbody
        - @placed_order.order_items.each do |item|
          %tr
            %td
              .general-img-wrap-table
                %img.cart-img-shadow.pull-left{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
            %td
              = link_to book_path(item.book), class: 'text-as-link' do
                %p.title= item.book.title
              %p.in-grey-600.fw-300= truncate(item.book.description, length: 175)
            %td
              %span.font-16.in-gold-500= price_to_euro(item.book.price)
            %td
              %span.ml-30= item.quantity
            %td
              %span.font-16.in-gold-500= price_to_euro(item.total_price)
  = render 'order_summary'
  .text-center
    = link_to 'Back to Store', catalog_path, class: 'btn btn-default mb-20'